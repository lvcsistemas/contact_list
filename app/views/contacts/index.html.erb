<p id="notice"><%= notice %></p>

<h1>Contatos</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>NOME</th>
      <th>TELEFONE</th>
      <th colspan="3">AÇÕES</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= button_to 'Exibir', contact, method: :get, class: 'btn btn-primary btn-sm' %></td>
        <td><%= button_to 'Editar', edit_contact_path(contact), method: :get, class: 'btn btn-success btn-sm' %></td>
        <td><%= button_to 'Excluir', contact, method: :delete, data: { confirm: "Confirma EXCLUIR contato: #{contact.name}?" }, class: 'btn btn-danger btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Novo Contato', new_contact_path, method: :get %>